{
  "routes": {
    "GET /user": {
      "controller": "User",
      "action": "find",
      "policies": ["isAuthenticated"]
    },
    "GET /user/:id": {
      "controller": "User",
      "action": "findOne",
      "policies": ["isAuthenticated"]
    },
    "POST /user": {
      "controller": "User",
      "action": "create",
      "policies": ["isAuthenticated"]
    },
    "PUT /user/:id": {
      "controller": "User",
      "action": "update",
      "policies": ["isAuthenticated"]
    },
    "DELETE /user/:id": {
      "controller": "User",
      "action": "destroy",
      "policies": ["isAuthenticated"]
    },
    "POST /user/:parentId/:relation": {
      "controller": "User",
      "action": "createRelation",
      "policies": ["isAuthenticated"]
    },
    "DELETE /user/:parentId/:relation/:id": {
      "controller": "User",
      "action": "destroyRelation",
      "policies": ["isAuthenticated"]
    },
    "POST /auth/logout": {
      "controller": "Auth",
      "action": "logout"
    },
    "POST /auth/forgot-password": {
      "controller": "Auth",
      "action": "forgotPassword"
    },
    "POST /auth/change-password": {
      "controller": "Auth",
      "action": "changePassword"
    },
    "POST /auth/local": {
      "controller": "Auth",
      "action": "callback"
    },
    "POST /auth/local/register": {
      "controller": "Auth",
      "action": "register"
    },
    "GET /auth/:provider/callback": {
      "controller": "Auth",
      "action": "callback"
    }
  }
}
