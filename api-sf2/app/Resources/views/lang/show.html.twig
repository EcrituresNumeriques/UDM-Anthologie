{% extends 'base.html.twig' %}

{% block body %}
    <h1>Lang</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ lang.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ lang.name }}</td>
            </tr>
            <tr>
                <th>Family</th>
                <td>{{ lang.family }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('lang_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('lang_edit', { 'id': lang.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
